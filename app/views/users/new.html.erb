<% provide(:title, "Sign Up") %>
<div class="container content-container">
	<div class="row">
		<div class="col-sm-12 center space-my-bottom">
			<h1>FFBL Sign Up Page</h1>
		</div>
		<div class="col-sm-4 col-sm-offset-4">
			<%= simple_form_for @user do |f| %>
			  <%= render 'shared/user_error_messages' %>
			  <%= f.input :name, label: "Full Name", :required => false %>
			  <%= f.input :email, :required => false %>
			  <%= f.input :team, label: "FFBL Team Name", :required => false %>
			  <%= f.input :password, :required => false %>
			  <%= f.input :password_confirmation, :required => false %>
			  <%= f.input :admin, label: "Admin user", as: :boolean, checked_value: true, unchecked_value: false %>
			  <%= f.button :submit, class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>