<%= provide(:title, "MiLB Database") %>

<h1>All MiLB Players</h1>

<ul>
	<% @players.where(level_id: 3...6).each do |player| %>
	<li>
		<%= player.last_name + ", " + player.first_name + "  |  " + player.position.spot %>
		<% if player.user %>
			<%= link_to "  |  #{player.user.team}", user_path(player.user) %>
			<% if player.level %>
				<%= player.level.league %>
			<% end %>
		<% else %>
			<%= link_to "  |  Add Player", add_player_path(player) %>
		<% end %>
	</li>
	<% end %>
</ul>