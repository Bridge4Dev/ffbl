<div class="space-my-bottom">
	<h4 class="search-title">Search Player Database</h4>
	<small>Search by player first or last name</small>
</div>
<%= form_tag players_path, :method => "get" do %>
	<%= text_field_tag :search, params[:search], placeholder: "Player Name", class: "search-text" %>

		<%= submit_tag "Search", :name => nil, class: "btn btn-cancel" %>

<% end %>