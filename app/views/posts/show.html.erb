<%= provide(:title, @post.topic) %>

<div class="container">
	<div class="row content-container">
		<div class="col-sm-6 post-title">
			<h2><%= @post.topic %></h2>
		</div>
		<div class="col-sm-11 post-content">
			<p><%= simple_format(@post.content) %></p>
			<small>-Created by <%= @post.user.name %> at <%= @post.created_at.strftime("%l:%M %P") %> on <%= @post.created_at.strftime("%b %-d, %Y") %></small>
		</div>
		
		<% if @responses.count > 0 %>
			<% @post.responses.each do |response| %>
				<div class="col-sm-10 col-sm-offset-1 response-content">
					<small><%= response.user.name %> replied...</small>
					<p><%= simple_format(response.reply) %></p>
					<small class="response-created">at <%= response.created_at.strftime("%l:%M %P") %> on <%= response.created_at.strftime("%b %-d, %Y") %></small>
				</div>
			<% end %>
			<% if logged_in? %>
				<div class="col-sm-11 give-me-top-margin">
					<%= render 'responses/response_form' %>
				</div>
			<% end %>
		<% elsif logged_in? %>
			<div class="col-sm-11 give-me-top-margin">
				<%= render 'responses/response_form' %>
			</div>
		<% else %>
		<% end %>
	</div>
</div>