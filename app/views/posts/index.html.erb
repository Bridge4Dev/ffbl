<%= provide(:title, "All Posts") %>

<div class= "container content-container">
	<div class="row">
		<div class="col-sm-12">
			<h1 class="space-my-bottom center">FFBL Message Board</h1>
		</div>
		<div class="col-sm-4 col-sm-offset-4 center">
				<%= link_to "Create a New Topic", new_post_path, class: "btn btn-cancel" %>
		</div>
		<div class="col-sm-12">
			<table class="table">
				<tr>
					<th>Topic</th>
					<th>By</th>
					<th>Replies</th>
					<th>Last Post</th>
				</tr>
				<% @posts.each do |post| %>
					<tr>
						<td><%= link_to post.topic, post_path(post), class: "post-link" %></td>
						<td><small><%= link_to post.user.name, user_path(post.user), class: "team-link" %></small></td>
						<td><small><%= post.responses.count %> replies</small></td>
						<% if post.responses.count > 0 %>
							<td><small><%= post.responses.last.user.name %>, <%= time_ago_in_words(post.responses.last.created_at) %> ago</small></td>
						<% else %>
							<td></td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
