<% if logged_in? %>
	<div class="container content-container">
		<div class="row">
			<div class="center jumbotron">
				<h1><%= "Oh Hai, #{current_user.name}!!" %></h1>
				<h3>You're officially logged in :-)</h3>
			</div>
		</div>
	</div>
<% else %>
	<div class="container content-container">
		<div class="row">
		  <div class="center jumbotron">
		    <h1>Welcome to the Franklin Fantasy Baseball League</h1>
		    <h3>Your home for competitive Fantasy Baseball</h3>
		    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>
		  </div>
		</div>
	</div>
<% end %>

<div class="container content-container">
	<div class="row">
		<div class="center col-sm-12">
			<%= render 'players/player_search_form' %>
		</div>
	</div>
</div>

<div class="container content-container">
	<div class="row center">
		<div class="col-sm-12">
			<h1>Recent Transactions</h1>
		</div>
		<div class="col-sm-4">
			<%= render 'transactions/transaction_search_form' %>
		</div>
		<div class="col-sm-8">			<table class="table">
				<%= render 'transactions/recent_transactions' %>
		</div>
		</table>
	</div>
</div>


