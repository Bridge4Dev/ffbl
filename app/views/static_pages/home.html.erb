<% if logged_in? %>
	<div class="container content-container">
		<div class="row center">
			<div class="jumbotron">
				<%= image_tag("FFBLLogo.png", :alt => "FFBL Logo") %>
				<h3>Thanks for logging in, <%= current_user.name %>!</h3>
				<h1>What would you like to do?</h1>
			</div>
			<div class="col-sm-8 col-sm-offset-2">
				<table class="table">
					<tr>
						<td><h2><%= link_to "My Team", user_path(current_user), class: "team-link" %></h2></td>
						<td><h2><%= link_to "Site Tutorial", tutorial_path, class: "team-link" %></h2></td>
					</tr>
					<tr>
						<td><h2><%= link_to "Message Board", posts_path, class: "team-link" %></h2></td>
						<td><h2><%= link_to "Draft Picks", "https://docs.google.com/spreadsheets/d/1BAZjYwbd90b15Bb0BFcxivuiD6iuqMfaLUxN1H7g5Wo/edit?usp=sharing", :target => "_blank", class: "team-link" %></h2></td>
					</tr>
					<tr>
						<td><h2><%= link_to "Player Database", players_path, class: "team-link" %></h2></td>
						<td><h2><%= link_to "Transactions", transactions_path, class: "team-link" %><h2></td>
					</tr>
				</table>
			</div>
		</div>
	</div>

	<% if @commish_note %>
		<div class="container content-container">
			<div class="row">
				<div class="col-sm-12 pad-my-bottom center">
					<h1>Message from the Commissioner</h1>
				</div>

				<div class="col-sm-8 col-sm-offset-2 pad-my-bottom space-my-bottom commish-note">
					<h3 class="center give-me-small-top-padding pad-my-bottom"><%= @commish_note.created_at.strftime("- %B %-d, %Y -") %></h3>
					<p><%= simple_format(@commish_note.commish_note_content) %></p>
				</div>
				<div class="col-sm-8 col-sm-offset-2 pad-my-bottom">
					<p><%= link_to "View all commish messages....", commish_notes_path, class: "team-link" %></p>
				</div>
			</div>
		</div>
	<% end %>

<% else %>
	<div class="container content-container">
		<div class="row">
		  <div class="center jumbotron">
		  	<%= image_tag("FFBLLogo.png", :alt => "FFBL Logo") %>
		    <h1>Welcome to the Franklin Fantasy Baseball League</h1>
		    <h3>Your home for competitive Fantasy Baseball since 2002</h3>
		    <%= link_to "Log In", login_path, class: "btn btn-lg btn-cancel give-me-top-margin" %>
		  </div>
		</div>
	</div>
<% end %>



<div class="container content-container">
	<div class="row">
		<div class="center col-sm-6">
			<%= render 'players/player_search_form' %>
		</div>
		<div class="center col-sm-6">
			<%= render 'transactions/transaction_search_form' %>
		</div>
	</div>
</div>

<div class="container content-container">
	<div class="row">
		<div class="col-sm-12">
			<h2>Recent Transactions</h2>
			<div class="give-me-top-margin">
				<table class="table">
					<%= render 'transactions/recent_transactions' %>
				</table>
				<p><%= link_to "View all transactions....", transactions_path, class: "team-link" %></p>
			</div>
		</div>
	</div>
</div>

<% if logged_in? %>
	<div class="container content-container">
		<div class="row">
			<div class="col-sm-12">
				<h2>Recent Posts</h2>
			</div>
			<div class="col-sm-12">
				<%= link_to "Create a New Topic", new_post_path, class: "btn btn-cancel" %>
			</div>
			<div class="col-sm-12">
				<table class="table">
					<%= render 'posts/recent_posts' %>
				</table>
				<p><%= link_to "View all posts....", posts_path, class: "team-link" %></p>
			</div>
		</div>
	</div>
<% end %>


