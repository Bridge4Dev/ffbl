<% if logged_in? %>
	<div class="container content-container">
		<div class="row center">
			<div class="jumbotron">
				<h2>Thanks for logging in, <%= current_user.name %></h2>
				<p>Where would you like to go?</p>
			</div>
			<div class="col-sm-3">
				<%= link_to "View my team", user_path(current_user), class: "btn btn-lg btn-cancel" %>
			</div>
			<div class="col-sm-3">
				<%= link_to "Message Board", posts_path, class: "btn btn-lg btn-cancel" %>
			</div>
			<div class="col-sm-3">
				<%= link_to "Player Database", players_path, class: "btn btn-lg btn-cancel" %>
			</div>
			<div class="col-sm-3">
				<%= link_to "Transactions", transactions_path, class: "btn btn-lg btn-cancel" %>
			</div>
		</div>
	</div>
<% else %>
	<div class="container content-container">
		<div class="row">
		  <div class="center jumbotron">
		    <h1>Welcome to the Franklin Fantasy Baseball League</h1>
		    <h3>Your home for competitive Fantasy Baseball</h3>
		    <%= link_to "Log In", login_path, class: "btn btn-lg btn-cancel give-me-top-margin" %>
		  </div>
		</div>
	</div>
<% end %>

<div class="container content-container">
	<div class="row">
		<div class="center col-sm-12">
			<%= render 'players/player_search_form' %>
		</div>
	</div>
</div>

<div class="container content-container">
	<div class="row center">
		<div class="col-sm-12">
			<h1 class="space-my-bottom">Recent Transactions</h1>
				<%= render 'transactions/transaction_search_form' %>
			<div class="give-me-top-margin">
				<table class="table">
					<%= render 'transactions/recent_transactions' %>
				</table>
			</div>
		</div>
	</div>
</div>


