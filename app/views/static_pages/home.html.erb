<% if logged_in? %>
	<div class="container content-container">
		<div class="row center">
			<div class="jumbotron">
				<h3>Thanks for logging in, <%= current_user.name %>!</h3>
				<h1>What would you like to do?</h1>
			</div>
			<div class="col-sm-12 center">
				<h2><%= link_to "View my team", user_path(current_user), class: "team-link" %></h2>
			</div>
			<div class="col-sm-12 center">
				<h2><%= link_to "Visit the Message Board", posts_path, class: "team-link" %></h2>
			</div>
			<div class="col-sm-12 center">
				<h2><%= link_to "Check the Player Database", players_path, class: "team-link" %></h2>
			</div>
			<div class="col-sm-12 center">
				<h2><%= link_to "View League Transactions", transactions_path, class: "team-link" %><h2>
			</div>
		</div>
	</div>
<% else %>
	<div class="container content-container">
		<div class="row">
		  <div class="center jumbotron">
		    <h1>Welcome to the Franklin Fantasy Baseball League</h1>
		    <h3>Your home for competitive Fantasy Baseball</h3>
		    <%= link_to "Log In", login_path, class: "btn btn-lg btn-cancel give-me-top-margin" %>
		  </div>
		</div>
	</div>
<% end %>

<div class="container content-container">
	<div class="row">
		<div class="center col-sm-6">
			<%= render 'players/player_search_form' %>
		</div>
		<div class="center col-sm-6">
			<%= render 'transactions/transaction_search_form' %>
		</div>
	</div>
</div>

<div class="container content-container">
	<div class="row center">
		<div class="col-sm-12">
			<h2>Recent Transactions</h2>
			<div class="give-me-top-margin">
				<table class="table">
					<%= render 'transactions/recent_transactions' %>
				</table>
			</div>
		</div>
	</div>
</div>


